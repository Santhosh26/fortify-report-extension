{
  "name": "fortify-report-extension",
  "version": "9.0.0",
  "description": "Fortify SSC Report for Azure DevOps",
  "private": true,
  "author": "Santhosh Kumar",
  "license": "MIT",
  "dependencies": {
    "azure-devops-extension-api": "^4.251.0",
    "azure-devops-extension-sdk": "^4.0.2",
    "azure-devops-ui": "^2.167.0",
    "azure-pipelines-task-lib": "^4.13.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.8.1",
    "file-loader": "^6.2.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "tfx-cli": "^0.15.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build-task && npm run build-tab",
    "build-task": "webpack --config webpack.task.config.js",
    "build-tab": "webpack --config webpack.tab.config.js",
    "postbuild": "npm run package-extension",
    "postinstall": "echo 'Dependencies installed'",
    "package-extension": "tfx extension create --manifest-globs vss-extension.json",
    "dev": "webpack --config webpack.tab.config.js --watch"
  }
}