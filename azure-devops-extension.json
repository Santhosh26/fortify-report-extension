{
    "manifestVersion": 1,
    "id": "fortify-report-extension",
    "name": "Fortify Multi-Platform Report",
    "version": "17.2",
    "publisher": "SanthoshKumar",
    "description": "A detailed Fortify vulnerability report for Azure DevOps supporting both SSC and on Demand",
    "public": true,
    "categories": ["Azure Pipelines"],
    "icons": {
        "default": "icon.png"
    },
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "scopes": [
        "vso.build"
    ],
    "contributions": [
        {
            "id": "fortify-report-tab",
            "type": "ms.vss-build-web.build-results-tab",
            "description": "Display Fortify vulnerability report in Azure Pipelines",
            "targets": ["ms.vss-build-web.build-results-view"],
            "properties": {
                "name": "Opentext Application Security",
                "uri": "dist/tabContent.html",
                "registeredObjectId": "registerBuild",
                "supportsTasks": ["53ab706a-68b4-4acc-b807-eaffedfab2b0"],
                "dynamic": true
            }
        },
        {
            "id": "FortifyReport",
            "type": "ms.vss-distributed-task.task",
            "targets": ["ms.vss-distributed-task.tasks"],
            "properties": {
                "name": "task",
                "displayName": "Fortify Security Report",
                "icons": {
                    "default": "./images/task-icon.png" 
                  }
            }
        }
    ],
    "files": [
        {
            "path": "./dist/task",
            "packagePath": "task",
            "addressable": false
        },
        {
            "path": "./dist",
            "packagePath": "dist",
            "addressable": true
        },
        {
            "path": "images",
            "addressable": true,
            "packagePath": "images"
        },
        {
            "path": "./overview.md",
            "addressable": true
        }
    ]
}